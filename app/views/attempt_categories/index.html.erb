<p id="notice"><%= notice %></p>

<h1>Attempt Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attempt_categories.each do |attempt_category| %>
      <tr>
        <td><%= attempt_category.name %></td>
        <td><%= link_to 'Show', [attempt_category.course,attempt_category] %></td>
        <td><%= link_to 'Edit', edit_course_attempt_category_path(attempt_category.course,attempt_category) %></td>
        <td><%= link_to 'Destroy',  [attempt_category.course,attempt_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attempt Category', new_course_attempt_category_path(@course) %>
