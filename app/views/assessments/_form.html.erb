<%= form_for [assessment.course,assessment] do |f| %>
  <% if assessment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assessment.errors.count, "error") %> prohibited this assessment from being saved:</h2>

      <ul>
      <% assessment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :tex_header %>
    <%= f.text_area :tex_header %>
  </div>


  <div class="field">
    <%= f.label :covered_standards %>
    <%= f.collection_select :standard_ids, assessment.course.standards, :id, :name, {include_hidden: false}, {multiple: true} %>
  </div>

  <div class="field">
    <%= label_tag :number_of_versions %>
    <%= select_tag :number_of_versions, options_for_select(1..8,4) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
