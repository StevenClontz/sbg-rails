\makeatletter
\newcommand{\ensurePageNumberIsZeroModFour}{%
  \count@=\the\c@page%<---
  \@tempcnta=\count@
  \divide\@tempcnta by 4
  \multiply\@tempcnta by 4
  \count@=\numexpr\count@-\@tempcnta\relax
  \ifnum\count@>0
    \loop\ifnum\count@<4
      \null\clearpage
      \advance\count@\@ne
    \repeat
  \fi
}
\makeatother


<%= @assessment.tex_header %>




\begin{document}

<% @students.each do |student| %>
\renewcommand{\headerText}{<%= @assessment.name %> -- <%=student.name%>}

<%
  student_exercise_versions = @exercise_versions.select do |e|
    e.students.include?(student) && e.standard.unmastered_by_student?(student)
  end
%>

<% if student_exercise_versions.length == 0 %>
  No exercises available.
<% else %>
  <% student_exercise_versions.each do |e| %>
    \exercise{%
      <%= e.covered_standard.name %>
      (version <%= e.id %>)%
    }{
      <%= e.exercise.description.html_safe %>
    }
  <% end %>
<% end %>

\ensurePageNumberIsZeroModFour

\hspace{0em}
\newpage

<% end %>

\end{document}
