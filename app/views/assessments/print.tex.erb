\documentclass[12pt]{article}

\usepackage[letterpaper,margin=1in]{geometry}

\setlength{\parindent}{0pt}
\parskip=0.5em

\usepackage{amssymb}
\usepackage{amsmath}

\usepackage{pgfplots}

\newcommand{\footerText}{
  <%= @course.name %>
}

\newcommand{\headerText}{}

\usepackage{fancyhdr}
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}% Default \headrulewidth is 0.4pt
\renewcommand{\footrulewidth}{0pt}% Default \footrulewidth is 0pt
\chead{\footnotesize\bf\headerText}
\cfoot{\footnotesize\footerText}


\newcommand{\exercise}[2]{
  \textbf{#1:} #2

}

<%= @assessment.tex_header %>




\begin{document}

<% @students.each do |student| %>
\renewcommand{\headerText}{<%= @assessment.name %> -- <%=student.name%>}

<% student_exercise_versions = @exercise_versions.select{|e| e.students.include? student} %>

<% if student_exercise_versions.length == 0 %>
  No exercises available.
<% else %>
  <% student_exercise_versions.each do |e| %>
    \exercise{%
      <%= e.covered_standard.name %>
      (version <%= e.id %>)%
    }{
      <%= e.exercise.description.html_safe %>
    }
  <% end %>
<% end %>

\newpage

<% end %>

\end{document}
