<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= link_to 'Show', [section.course,section] %></td>
        <td><%= link_to 'Edit', edit_course_section_path(section.course,section) %></td>
        <td><%= link_to 'Destroy', [section.course,section], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_course_section_path(@course) %>
