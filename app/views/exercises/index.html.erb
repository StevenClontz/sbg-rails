<p id="notice"><%= notice %></p>

<h1>Exercises</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Standard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.id %></td>
        <td><%= exercise.standard.name %></td>
        <td><%= link_to 'Show', [exercise.course,exercise] %></td>
        <td><%= link_to 'Edit', edit_course_exercise_path(@course,exercise) %></td>
        <td><%= link_to 'Destroy', course_exercise_path(@course,exercise), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_course_exercise_path(@course) %>
