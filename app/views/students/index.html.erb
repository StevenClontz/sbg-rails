<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>School identifier</th>
      <th>Email</th>
      <th>Attempt points used/earned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.section.name if student.section %></td>
        <td><%= student.school_identifier %></td>
        <td><%= student.email %></td>
        <td>
          <%= student.attempt_points_used %> /
          <%= student.attempt_points_earned %>
        </td>
        <td><%= link_to 'Show', course_student_path(@course,student) %></td>
        <td><%= link_to 'Edit', edit_course_student_path(@course,student) %></td>
        <td><%= link_to 'Destroy', course_student_path(@course,student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_course_student_path(@course) %>
